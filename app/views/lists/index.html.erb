<div class="card-category  banner-img banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.infos-nantes.fr/wp-content/uploads/2023/11/Cinema-1280x640.jpg)">
  Create your movie lists
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="row d-flex">
        <% @lists.each do |list| %>
          <div class="col-lg-6 mt-4">
            <%= link_to list_path(list.id),  style: "text-decoration: none" do %>
              <div class="card-category d-flex" style="border-radius:5px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
                <h2><%= list.name %></h2>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="bg-white classic-form mt-4">
        <h4>Add a new list</h4>
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
