<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.infos-nantes.fr/wp-content/uploads/2023/11/Cinema-1280x640.jpg)">
  <%= @list.name %>
</div>
<div class="container">
<div class="d-flex justify-content-between">
<%= link_to "Delete the list",
              list_path(@list.id),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger mt-4"%>
</div>
<div class="mt-5 bg-white p-2" style="border-radius: 5px">
    <h4>Add a new film to the list</h4>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit %>
      <% end %>
    </div>
  <div class="row d-flex mt-4">
      <% @list.bookmarks.each do |bookmark| %>
      <div class="col-lg-4 mb-4">
        <div class="card-trip d-flex flex-column">
          <img src= <%=bookmark.movie.poster_url%> />
          <div class="card-trip-infos">
              <div class="d-flex align-items-center">
                <h2><%= bookmark.movie.title %></h2>
                <h3 class="ms-1 me-1"><%=bookmark.movie.rating%></h3>
                <h3><i class="fa-solid fa-star"></i></h3>
              </div>
              <div class="card-text">
              <p><%= bookmark.movie.overview %></p>
              </div>
            <div class="d-flex align-items-center justify-content-between mt-3 mb-2">
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-quote-left me-1"></i>
                <p class="me-1"><%= bookmark.comment %></p>
              </div>
              <div>
                <%= link_to "Remove",
                bookmark_path(bookmark.id),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link-danger"%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
